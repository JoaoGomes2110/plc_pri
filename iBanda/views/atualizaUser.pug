extends layout

block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-dark-grey
      h1 iBanda
  .w3-container.w3-large
    .w3-bar.w3-black.w3-mobile
        .w3-bar-item
            form.w3-container(action='/admin', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Inicio') 
        .w3-bar-item.w3-right
            form.w3-container(action='/logout', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Logout')
  .w3-container  
    .w3-card-4
        header.w3-grey.w3-center
            h2.w3-text-white Atualizar Utilizador
        .w3-container
            form.w3-container(method="POST" action="/admin/users/atualizar")
                input.w3-input(type="text" name="username" value=user._id readonly="readonly")
                br
                input.w3-input(type="text" name="nome" value=user.name)
                br
                input.w3-input(type="email" name="email" value=user.email)
                br
                input.w3-input(type="password" name="password" id='pass' placeholder="Password:")
                br
                input.w3-input(type="password" name="confirm-Password" id='confirm-pass' placeholder="Confirm Password:")
                br
                label.w3-label(id='message') 
                br
                input.w3-input(type="text" name="userType" value= user.userType)
                br
                input.w3-btn.w3-black(type="submit" value="Atualizar" id='adicionar' class = 'enable')                    
            br
  .w3-container.w3-center.w3-bottom
    footer.w3-container.w3-dark-grey
