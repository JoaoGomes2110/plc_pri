extends layout

block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-dark-grey
      h1 iBanda
  .w3-container.w3-large
    .w3-bar.w3-black.w3-mobile
        .w3-bar-item
            form.w3-container(action='/admin', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Inicio') 
        .w3-bar-item.w3-right
            form.w3-container(action='/logout', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Logout')
  .w3-container  
    .w3-card-4
        header.w3-grey.w3-center
            h2.w3-text-white Registar Evento
        .w3-container
            form.w3-container(method="POST" action="/admin/adiciona")
                input.w3-input(type="text" name="data" placeholder="Data:")
                br
                input.w3-input(type="text" name="hinicio" placeholder="Hora de Inicio:")
                br
                input.w3-input(type="email" name="hfim" placeholder="Hora de Fim:")
                br
                input.w3-input(type="email" name="tipo" placeholder="Tipo:")
                br
                input.w3-input(type="email" name="designacao" placeholder="Designação:")
                br
                input.w3-input(type="email" name="local" placeholder="Local:")
                br
                input.w3-input(type="email" name="informacao" placeholder="Informação:")
                br
                label.w3-label(id='message') 
                br
                input.w3-btn.w3-black(type="submit" value="Adicionar" id='adicionar' class = 'enable')                    
            br
  .w3-container.w3-center.w3-bottom
    footer.w3-container.w3-dark-grey
