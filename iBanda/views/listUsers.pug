extends layout
block content
  .w3-container
    .w3-card-4
        header.w3-pale-green
            h3 Lista de Utilizadores:
        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th E-Mail
                each u in users
                    tr
                        td
                            a(href='/users/list/' + u._id)= u.name
                        td= u.email
        br
        footer.w3-container.w3-pale-green
            address Gerado por iBanda App.
                