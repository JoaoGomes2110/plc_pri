extends layout
 
block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-dark-grey
      h1 iBanda
  .w3-container.w3-large
    .w3-bar.w3-black.w3-mobile
        .w3-bar-item
            form.w3-container(action='/admin', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Inicio') 
        .w3-bar-item.w3-right
            form.w3-container(action='/logout', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Logout')
  .w3-container  
    .w3-card-4
        header.w3-grey.w3-center
            h2.w3-text-white Lista de Logs
        .w3-container
            .w3-row
                .w3-col.m6.l7
                    table.w3-table-all
                        tr
                            th Tipo:
                            th Visualizações:
                            th Downloads:
                        tr
                            td Total
                            td= logs.total.visualizacoes
                            td= logs.total.downloads
                        tr
                            td Produtores
                            td= logs.produtor.visualizacoes
                            td= logs.produtor.downloads
                        tr
                            td Consumidores
                            td= logs.consumidor.visualizacoes
                            td= logs.consumidor.downloads 
                    br
                .w3-col.m4.l3
                    ul.w3-ul.w3-center
                        li
                            form.w3-container(method="GET" action="/admin/logs/exportar")
                                br
                                input.w3-btn.w3-black(type="submit" value="Exportar" id='exportar')
                                br
  .w3-container.w3-center.w3-bottom
    footer.w3-container.w3-dark-grey
