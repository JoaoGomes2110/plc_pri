extends layout

block content
    .w3-card-4
        header.w3-pale-green
            h2 Login de Utilizador
        .w3-container
            form.w3-container(method="POST" action="/login")
                input.w3-input(type="text" name="username" placeholder="Username:")
                input.w3-input(type="password" name="password" placeholder="Password:")
                input.w3-btn.w3-pale-green(type="submit" value="Login")                    
            br
            footer.w3-container.w3-pale-green
                address Gerado por AgendaApp.