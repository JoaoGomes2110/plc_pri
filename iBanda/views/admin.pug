extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-pale-green
                h3 Bem-Vindo Administrador
            .w3-container
                ul.w3-ul
                    li
                        form.w3-container(action='/users/register',method='GET')
                            input.w3-btn.w3-pale-green(type='submit', value='Registo')
                    li
                        form.w3-container(action='/users/list', method='GET')
                            input.w3-btn.w3-pale-green(type='submit', value='Lista de Utilizadores')
                    li
                        button.w3-button.w3-pale-green Utilizador por ID
                        input.w3-input.w3-border(id='pesquisar' placeholder='Introduza o nome de um autor')
                    br
            footer.w3-container.w3-pale-green
                address  Gerado por iBanda App.